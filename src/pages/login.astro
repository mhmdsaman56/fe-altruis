---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
    <div>
        <h1 class="text-lg font-bold">Log in to your account</h1>
        <p>Enter your information below to log in to your account</p>
    </div>
    <div>
        <label class="font-medium" for="email">Email</label>
        <input
            class="border w-full rounded-md p-2 mt-1"
            type="text"
            placeholder="Your email"
            id="email"
        />
    </div>
    <div>
        <label class="font-medium" for="password">Password</label>
        <input
            class="border w-full rounded-md p-2 mt-1"
            type="password"
            placeholder="Your password"
            id="password"
        />
    </div>
                <div class="flex flex-col gap-3">
                <button class="bg-black text-white rounded-lg p-2">Log In</button>
                <button class="bg-white text-black border border-slate-500 rounded-lg p-2 ">Log in with google</button>
                <p class="text-center text-slate-500">Don't have an account? <a href="/register" class="underline">Sign up</a></p>
            </div>
</AuthLayout>
