---
import Layout from "../layouts/Layout.astro";
import {HomeComponent} from "../components/angular/pages/home/home.component.ts";
---

<Layout>
    <div class="flex flex-col p-6 items-center min-h-screen bg-gray-100">
        <div class="w-4xl">
            <div class="w-full rounded-lg bg-white p-6">
                <p class="font-bold text-xl">
                    Apa yang ingin anda tanyakan hari ini?
                </p>
                <textarea
                    class="w-full border border-gray-300 rounded-md p-2 mt-4"
                    rows="3"
                    placeholder="Tanyakan apapun, namamu gak akan muncul sebagai penanya..."
                ></textarea>
                <div class="flex justify-end mt-4">
                    <button class="bg-black text-white px-4 py-2 rounded-lg">
                        Kirim Pertanyaan
                    </button>
                </div>
            </div>

            <div class="w-full mt-8">
                <HomeComponent client:only="angular" />
            </div>
        </div>
    </div>
</Layout>
